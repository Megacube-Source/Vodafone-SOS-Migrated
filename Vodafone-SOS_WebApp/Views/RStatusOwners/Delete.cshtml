@model Vodafone_SOS_WebApp.ViewModels.RStatusOwnerViewModel

@{
    ViewBag.Title = "Delete";
}

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3>Are you sure you want to delete this Status Owner ?</h3>

        <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.RsoStatusOwner)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RsoStatusOwner)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RsoStatusOwner)
            </dd>

        </dl>


        <div class="col-md-4">
            <button type="button" class="btn btn-borderRed btn-cons" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
            <button type="submit" class="btn btn-red btn-cons">Delete&nbsp;</button>

        </div>
    }
</div>
