                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = " login-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "login-label" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log in" class="pull-right login-btn" />
                    </div>
                    <div class="form-group text-left">
                        @*<a href="#" onclick="alert('Funtionality not developed yet')" ><u>Forgot password ?</u></a>*@
                        <a href="#" onclick="FnForgotPassword()"><u>Forgot password ?</u></a>
                    </div>
                    @Html.AntiForgeryToken()
                    @Html.Hidden("UTCOffset")
                }
                <p>Only Authorised users are allowed to access.</p>

                <div class="info">
                    <h2>About LITE</h2>
                    <p> It is a complete commissions portal that hosts </p>
                    <ul>
                        <li>Commission calculations and Payment approvals</li>
                        <li>Claims management</li>
                        <li>Master Data Mangement - Payees, Schemes, Tariffs</li>
                        <li>Enforce controls</li>
                        <li>Audit trails</li>
                    </ul>
                </div>
            </div>



        </div>
