    <script>
    $(document).ready(function () {
        ////method to disable back button of browser after logout for security reasons by shubham -- discarded by VG
        //history.pushState(null, null, document.URL)
        //window.addEventListener('popstate', function () {
        //    history.pushState(null, null, document.URL)
        //})
            if ('@TempData["Message"]') {
                alert('@TempData["Message"]')
            }
            //Display Error Message as Popup
             if ('@TempData["Error"]') {
                alert('@TempData["Error"]')
            }
            //Adding a temp method to get client IP Address. Will approve this from JS/VG
            $.getJSON('//api.ipify.org?format=jsonp&callback=?', function (data) {
                var IpAddress = data.ip;
                document.getElementById('ClientIPAddress').value = IpAddress;//JSON.stringify(data, null, 2);
        });
            FngetBannerText();
        })

        function FnForgotPassword() {
            var Email = document.getElementById('Email').value;
            if (Email == null || Email == "") {
                alert("The Email field is required. Please provide Email");
                return;
            }
            window.location.href = '/Account/ForgotPassword?Email=' + Email;
        }

        function FngetBannerText() {
            $.ajax({
                type: "GET",
                cache: false,
                url: "/Account/getBannerText",
                success: function (data) {
                    if (data != null) {  
                        
                        $("#h3text").text(data);
                    }
                    if ((data == "")||(data == null)) {
                        $("#ftLogin").hide();
                    }
                   
                },
                error: function (reponse) {
                    console.log(reponse);
                    $("#h3text").text("System Outage, Please watch out this space for updates");
                    //fnGetRoles();
                }
            });
        }
            
           
       

    </script>

