@model Vodafone_SOS_WebApp.ViewModels.RActiveTypeViewModel

@{
    ViewBag.Title = "Delete";
}



<h3>Are you sure you want to delete this Activity Type ?</h3>
<div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.RatDescription)
    @Html.HiddenFor(m=>m.RatName)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.GcCompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GcCompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RatName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RatName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RatDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RatDescription)
        </dd>

    </dl>

    <div class="col-md-4">
        <button type="button" class="btn btn-borderRed btn-cons" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
        <button type="submit" class="btn btn-red btn-cons">Delete&nbsp;</button>

    </div>
}
</div>
