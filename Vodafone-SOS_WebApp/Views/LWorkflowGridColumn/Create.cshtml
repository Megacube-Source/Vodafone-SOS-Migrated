            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfgcOrdinal, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfgcOrdinal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfgcOrdinal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfgcFunctionName, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfgcFunctionName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfgcFunctionName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-borderRed btn-cons" style="align-self:center" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
                <input type="submit" value="Save" class="btn btn-red btn-cons" />

            </div>
        </div>

    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
