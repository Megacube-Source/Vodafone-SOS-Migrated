        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfgcAscDesc, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
               @* @Html.TextBoxFor(model => model.LwfgcAscDesc, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.LwfgcAscDesc, null, "-- Select Here --", new { @class = "form-control required" })
                @Html.ValidationMessageFor(model => model.LwfgcAscDesc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfgcWfConfigId, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleDropDown", null, "-- Select Here --", new { @class = "form-control col-md-8", @style = "width: 70%", @onfocus = "FnError()", @readonly = "readonly" })
