                @Html.CheckBoxFor(model => model.LwfgcShouldBeVisible)
                @Html.ValidationMessageFor(model => model.LwfgcShouldBeVisible, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
