@model Vodafone_SOS_WebApp.ViewModels.SupportSystemStagesViewModel

@{
    ViewBag.Title = "Create Stage";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.RtsName, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RtsName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RtsName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RtsDescription, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.RtsDescription, new { @class = "TextAreaShapeSize form-control" })
                @Html.ValidationMessageFor(model => model.RtsDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <br>
            @Html.LabelFor(model => model.RtsIsActive, htmlAttributes: new { @class = "col-md-5" })
            <div class="col-md-7">
                @Html.CheckBox("RtsIsActive", true, new { @class = "form-control" })
            </div>
        </div>


        <div class="col-md-4">
            <button type="button" class="btn btn-borderRed btn-cons" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
            <button type="submit" class="btn btn-red btn-cons">Submit&nbsp;</button>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

