@model Vodafone_SOS_WebApp.ViewModels.SupportSystemCategoriesViewModel

@{
    ViewBag.Title = "DeleteCategory";
   
}
<h3>Are you sure you want to delete this Category ?</h3>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.RscCompanyId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.RscName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RscName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RscDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RscDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RscTicketDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RscTicketDescription)
            </dd>

        </dl>


        <div class="col-md-4">
            <button type="button" class="btn btn-borderRed btn-cons" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
            <button type="submit" value="DeleteCategory" class="btn btn-red btn-cons">Delete&nbsp; </button>

        </div>
    }
</div>

