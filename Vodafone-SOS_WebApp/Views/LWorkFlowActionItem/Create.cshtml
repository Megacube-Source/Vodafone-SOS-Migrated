@model Vodafone_SOS_WebApp.ViewModels.LWorkFlowActionItemsViewModel
@{
    ViewBag.Title = "Create WorkFlow Action Item";
}

<script>

    function FnError() {
        alert("Can not change the field value");
        return;
    }
</script>

<div class="form-horizontal">

    <div class="form-group">
        @Html.Label("Company", htmlAttributes: new { @class = "control-label col-md-3 " })
        <div class="col-md-9" id="cid" name="cid" style="width:20%">
            @Html.DropDownList("CompanyId", null, "-- Select Here --", new { @class = "form-control col-md-8", @style = "width: 70%", @onfocus = "FnError()", @readonly = "readonly" })
        </div>
        @Html.Label("WorkFlow", htmlAttributes: new { @class = "control-label col-md-3 " })
        <div class="col-md-9" style="width:20%">
            @Html.DropDownList("WFId", null, "-- Select Here --", new { @class = "form-control col-md-8", @style = "width: 70%", @onfocus = "FnError()", @readonly = "readonly" })

        </div>
    </div>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frm", name = "frm", @encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h3>Create New Action Item</h3>
        <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>

        @Html.Hidden("WFId")
        @Html.Hidden("ConfigId")
        @Html.Hidden("CompanyId")
        @Html.Hidden("RoleId")
        @Html.Hidden("Role")

        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiLoginWFConfigId, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RoleDropDown", null, "-- Select Here --", new { @class = "form-control col-md-8", @style = "width: 70%", @onfocus = "FnError()", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiShowInTabWFConfigId, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ShowInTabRolesDropDown", null, "-- Select Here --", new { @class = "form-control col-md-8", @style = "width: 70%" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiActionItemName, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfaiActionItemName, new { @class = "form-control required" })

                @Html.ValidationMessageFor(model => model.LwfaiActionItemName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiUILabel, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfaiUILabel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiUILabel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiActionDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfaiActionDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiActionDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiOrdinal, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfaiOrdinal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiOrdinal, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiIsButtonOnWfGrid, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.LwfaiIsButtonOnWfGrid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiIsButtonOnWfGrid, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiIsButtonOnForm, htmlAttributes: new { @class = "control-label required col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.LwfaiIsButtonOnForm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiIsButtonOnForm, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LwfaiActionURL, htmlAttributes: new { @class = "control-label  col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LwfaiActionURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LwfaiActionURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-borderRed btn-cons" style="align-self:center" onclick="window.location.href = '@HttpContext.Current.Session["from"]'">Back&nbsp;</button>
                <input type="submit" value="Save" class="btn btn-red btn-cons" />

            </div>
        </div>

    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
